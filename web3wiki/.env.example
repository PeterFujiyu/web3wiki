# Frontend API URL (for local development)
VITE_API_URL=http://localhost:3001

# Server Port (for local backend)
PORT=3001

# MongoDB Connection String (REQUIRED for Vercel deployment)
# Get this from MongoDB Atlas: https://cloud.mongodb.com
# Format: mongodb+srv://username:password@cluster.mongodb.net/web3wiki
MONGODB_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/web3wiki?retryWrites=true&w=majority
